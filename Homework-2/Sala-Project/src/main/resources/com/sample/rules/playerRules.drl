rule "User Money"
	
	when 
		Sala ($players: players, getMachines().size()>0, getPlayers().size()>0)
		//$e: Player() from $players
		accumulate( Player( $a: cash ) from $players, 
			$max: max( $a ),
			$min: min( $a ),
			$avg: average( $a )
			)
	then
		System.out.println(	"User) - Maximum value of money:" + $max + " Minimum:" + $min + " Averange:" + $avg);		
end


